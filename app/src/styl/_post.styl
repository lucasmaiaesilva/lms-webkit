.posts
    background #fff
    width 96%
    margin 3.7em auto
    +below(bp)
        width 70%
    .post
        col(1/3, cycle: 3)
        margin-bottom 30px
        +below(bp)
            stack()
            font-size 1.2em
        h1
            font-size 1.1em
            font-weight 300
            color #fff
            +below(bp)
                display block
                text-align center
                margin-bottom 1.1em
        a
            color #404d5b
            transition color 0.2s
            &:hover
                color #d04c3f
            img
                opacity 
                //transition 0.3s opacity
                &:hover
                    opacity 0.9
        img
            width 100%
            height auto
            background #ededed
        p
            margin 4px 0
            
        .t-post-info
            font-size .9em
            padding 10px
            margin-bottom 10px
            background #2c3f52
            font-weight 400
            +below(bp)
                font-size .8em
                padding-bottom 2px
                margin-bottom 15px
        .more
            text-align right
            +below(bp)
                text-align center
                margin-bottom 1.1em